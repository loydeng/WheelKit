<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CameraFragment">

    <TextView
        android:id="@+id/textview_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_first_fragment"
        app:layout_constraintBottom_toTopOf="@id/ll_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/debug_log_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="debug_log"/>
        <Button
            android:id="@+id/file_log_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="file_log"/>
        <Button
            android:id="@+id/view_log_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="view_log"/>
        <Button
            android:id="@+id/crash_log_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="crash_log"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>